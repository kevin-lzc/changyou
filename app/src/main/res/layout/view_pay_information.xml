<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:overScrollMode="never"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pay_confirm"
    android:layout_alignParentRight="true"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_pay_top"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/view_pay_back"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@mipmap/back_black" />
            <TextView
                android:id="@+id/view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京天坛"
                android:textSize="25sp"
                android:textColor="@android:color/black"
                android:layout_centerInParent="true"
                />

            <Button
                android:id="@+id/view_shopping_cart"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/buy_car_black" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:id="@+id/ticket1"
        android:background="@drawable/style_item_gray"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/ticket1_1"
            >
            <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="成人票"
            android:textSize="30sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="20dp"
                android:text="¥100"
                android:textSize="20sp"
                android:textColor="#FF784D"
                ></TextView>
      </LinearLayout>



<LinearLayout
    android:id="@+id/ticket1_2"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_below="@+id/ticket1_1"
    >

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="无需取票"
        android:textSize="15sp"></TextView>

    <Button
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="150dp">


    </Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:text="1"
        android:textSize="20sp"></TextView>

    <Button
        android:layout_width="27dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp">


    </Button>


</LinearLayout>


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="390dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="#FFF9EE"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@mipmap/tips"

                ></ImageView>


            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="确定出行日期后当天下午一点前可退票"
                android:textSize="20sp"
                android:textColor="@android:color/holo_red_light"
                />

        </LinearLayout>


    </LinearLayout>


<LinearLayout
    android:id="@+id/ticket2"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/style_item_gray_3"
    android:layout_below="@+id/ticket1"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/ticket2_1"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="儿童票"
            android:textSize="30sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="20dp"
            android:text="¥50"
            android:textSize="20sp"
            android:textColor="#FF784D"
            ></TextView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ticket2_2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/ticket2_1"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="无需取票"
            android:textSize="15sp"></TextView>

        <Button
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="150dp">


        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="1"
            android:textSize="20sp"></TextView>

        <Button
            android:layout_width="27dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp">


        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="390dp"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="#FFF9EE"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@mipmap/tips"

            >

        </ImageView>

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="确定出行日期后当天下午一点前可退票"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_light"
            />

    </LinearLayout>

</LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/style_item_gray_3"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="添加联系人"
                android:textSize="30sp">

            </TextView>

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/view_add_friends"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/button_gray"
                android:text="添加联系人">

            </Button>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/style_item_gray_3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/PI3_top"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="优惠活动"
                android:textSize="30sp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/PI3_top"

                >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="优惠劵："
                    android:textSize="20sp">

                </TextView>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="暂无可用优惠劵"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="20sp">

                </TextView>

            </LinearLayout>

            <View
                android:layout_width="380dp"
                android:layout_height="3px"
                android:layout_marginLeft="20dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="390dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"

                >

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="总额："
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="15sp">

                </TextView>

                <TextView
                    android:layout_width="100dp"

                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:text="¥ ？？？"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="25sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="咨询："
                    android:textSize="15sp">

                </TextView>

                <Button
                    android:id="@+id/view_pay_help"
                    android:layout_width="18dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/help" />

                <Button

                    android:id="@+id/view_pay"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/register_yanzhengma_bg"
                    android:text="去支付"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</ScrollView>