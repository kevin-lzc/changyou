<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView_sight_icon"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_baseline_photo_24"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="20dp"

        android:text="景点名称"
        android:id="@+id/sight_name"

        android:textSize="15sp"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_18"
        android:layout_marginLeft="5dp"

        android:background="@android:color/transparent"
        android:theme="@android:style/Theme.Translucent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/sight_date"
        android:text="有效日期"

        android:layout_alignTop="@+id/imageView_sight_icon"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@id/imageView_sight_icon"
        />


    <TextView
        android:id="@+id/sight_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="120dp"

        android:layout_toRightOf="@id/imageView_sight_icon"
        android:text="价格计算" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sight_price_total"
        android:text="总价格"

        android:layout_toRightOf="@id/sight_price"
        android:layout_alignBottom="@+id/sight_price"

        android:layout_marginLeft="10dp"
        android:textSize="24dp"








        />


</RelativeLayout>
