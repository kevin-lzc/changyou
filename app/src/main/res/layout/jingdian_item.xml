<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/goback"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/back_black"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@mipmap/bjtiantan"
           />

    </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京天坛"
            android:layout_marginLeft="10dp"
            android:textSize="35sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ajfjakljlkajflkajdslfkjaasdfjlkajsldjlkasjdfldhfjslklkfjlksjflkjslj"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥100"
                android:textSize="35sp"
                android:textColor="@android:color/holo_red_dark"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textSize="20sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/share"
                android:layout_gravity="center"
                android:layout_marginLeft="200dp"
             />
        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
         <LinearLayout
             android:layout_marginTop="10dp"
             android:layout_width="match_parent"
             android:layout_height="150dp"
             android:orientation="vertical">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="25dp"
                 android:orientation="horizontal"
                 >
                 <ImageView
                     android:layout_width="25dp"
                     android:layout_height="25dp"
                     android:src="@mipmap/persons"
                       />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="超过1w人预订"
                     android:layout_marginLeft="12dp"
                     android:textSize="15sp"
                     android:layout_gravity="center_vertical"
                     />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="25dp"
                 android:layout_marginTop="10dp"
                 android:orientation="horizontal"
                 >
                 <ImageView
                     android:layout_width="25dp"
                     android:layout_height="25dp"
                     android:src="@mipmap/time"
                     />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="每日9：00-22；00"
                     android:layout_marginLeft="12dp"
                     android:textSize="15sp"
                     android:layout_gravity="center_vertical"
                     />
             </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="25dp"
                 android:layout_marginTop="10dp"
                 android:orientation="horizontal"
                 >
                 <ImageView
                     android:layout_width="25dp"
                     android:layout_height="25dp"
                     android:src="@mipmap/child"
                     />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="适合儿童游玩"
                     android:layout_marginLeft="12dp"
                     android:textSize="15sp"
                     android:layout_gravity="center_vertical"
                     />
             </LinearLayout>
         </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/money"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无ATM机"
                    android:layout_marginLeft="12dp"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/personidcard"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="须出示身份证"
                    android:layout_marginLeft="12dp"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/time"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一日行程"
                    android:layout_marginLeft="12dp"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/calender"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="门票一日有效"
                    android:layout_marginLeft="12dp"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/onlineticket"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可出示电子票据"
                    android:layout_marginLeft="12dp"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>




        </LinearLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="简介:"
    android:textSize="15sp"
/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/beforelike"
                android:background="@drawable/like_click"
                />
            <Button
                android:id="@+id/add_order"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:text="添加到订单"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:background="#FFA628"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/go_to_order"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:text="现在预订"
                android:layout_marginLeft="20dp"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:background="#FF5722"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>


</ScrollView>