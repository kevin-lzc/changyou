<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/my_center1"
        android:background="@drawable/register_yanzhengma_bg"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:background="@null"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:text="登录/注册 "/>
        <ImageButton
            android:background="@null"
            android:id="@+id/face"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:src="@mipmap/face"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_center2"
        android:layout_marginLeft="30dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/my_center1"
        android:background="@drawable/style_item_bottom"
        >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/order">

        </ImageView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:textStyle="normal"
            android:text="过往订单 "/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_center3"
        android:layout_marginLeft="30dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/my_center2"
        android:background="@drawable/style_item_bottom"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/like2">

        </ImageView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:textStyle="normal"
            android:text="心愿清单 "/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/my_center4"
        android:layout_marginLeft="30dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/my_center3"
        android:background="@drawable/style_item_bottom"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="46dp"
            android:src="@mipmap/aaa111">

        </ImageView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:textStyle="normal"
            android:text="我的旅拍"/>

    </LinearLayout>

    <TextView
        android:id="@+id/my_center5"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/my_center4"
        android:background="@drawable/back_cccccc"
        >


    </TextView>

    <LinearLayout
        android:id="@+id/my_center6"
        android:layout_marginLeft="30dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/my_center5"
        android:background="@drawable/style_item_bottom"
        >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/language">

        </ImageView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:textStyle="normal"
            android:text="语言设置 "/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/my_center7"
        android:layout_marginLeft="30dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/my_center6"
        android:background="@drawable/style_item_bottom"
        >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/history">

        </ImageView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:textStyle="normal"
            android:background="@null"
            android:text="浏览足迹 "/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_center8"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/my_center7"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/style_item_bottom">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/help">

        </ImageView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="帮助中心"
            android:textSize="20sp"
            android:background="@null"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_center9"
        android:layout_marginLeft="30dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/my_center8"
        android:background="@drawable/style_item_bottom"
        >

        <ImageView
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ourselves">

        </ImageView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:textStyle="normal"
            android:background="@null"
            android:text="关于我们 "/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_center9"
        android:background="@drawable/style_item_gray"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"

            >

            <TextView
                android:id="@+id/ours1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="对我们的产品有意"
                android:textSize="30dp" />


            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/ours1"
                android:background="@mipmap/close" />




        </LinearLayout>
        <TextView
            android:id="@+id/ours2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/ours"
            android:layout_marginLeft="20dp"
            android:text="见或建议？"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ours"
            android:layout_marginLeft="20dp"
            android:text="欢迎随时联系我司CTO"
            android:textSize="20dp" />


    </LinearLayout>

</RelativeLayout>