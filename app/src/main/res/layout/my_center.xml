<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#F2F3F5"
    android:layout_height="match_parent"
    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/my_center1"
        android:background="#FF5722"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:background="@null"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:text="登录/注册 "/>
        <ImageButton
            android:background="@null"
            android:id="@+id/face"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:src="@mipmap/face"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_center2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/my_center1"
        android:background="@drawable/style_item_bottom"
        >
        <ImageView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/order"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:textStyle="normal"
            android:text="过往订单 "/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_center3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/my_center2"
        android:background="@drawable/style_item_bottom"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/like2">

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:layout_marginLeft="1dp"
            android:textStyle="normal"
            android:text="心愿清单 "/>

    </LinearLayout>
    <LinearLayout
    android:id="@+id/my_center4"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_below="@id/my_center3"
    android:background="@drawable/style_item_bottom"
    >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="46dp"
            android:src="@mipmap/aaa111">

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:background="@null"
            android:textStyle="normal"
            android:text="我的旅拍"/>

    </LinearLayout>

    <View
        android:id="@+id/my_center5"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/my_center4"
        android:background="#F2F3F5"
        >


    </View>

    <LinearLayout
        android:id="@+id/my_center6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/my_center5"
        android:background="@drawable/style_item_bottom"
        >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/language">

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:textStyle="normal"
            android:text="语言设置 "/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/my_center7"
        android:layout_marginTop="0.5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/my_center6"
        android:background="@drawable/style_item_bottom"
        >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/history">

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:textStyle="normal"
            android:background="@null"
            android:text="浏览足迹 "/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_center8"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/my_center7"
        android:layout_marginTop="5dp"
        android:background="@drawable/style_item_bottom">

        <ImageView
            android:layout_width="38dp"
            android:paddingLeft="2dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/help">

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_gravity="center_vertical"
            android:text="帮助中心"
            android:textSize="20sp"
            android:background="@null"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_center9"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.5dp"
        android:layout_below="@id/my_center8"
        android:background="@drawable/style_item_bottom"
        >

        <ImageView
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ourselves"
            android:paddingLeft="2dp"
            >

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="13dp"
            android:textStyle="normal"
            android:background="@null"
            android:text="关于我们 "/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_center9"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/ours1"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="对我们的产品有意见或建议？"
                android:textSize="25sp" />


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/ours1"
                android:background="@mipmap/close" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ours"
            android:layout_marginLeft="20dp"
            android:text="欢迎随时联系我司CTO"
            android:textSize="20dp" />


    </LinearLayout>

</RelativeLayout>