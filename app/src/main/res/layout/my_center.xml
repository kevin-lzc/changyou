<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerHorizontal="true"
    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="150dp"

        android:id="@+id/my_center1"
        android:background="#FF5722"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:background="@null"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:text="登录/注册 "
            android:layout_marginStart="20dp" />
        <ImageButton
            android:background="@null"
            android:id="@+id/face"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:src="@mipmap/face"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_center2"
        android:layout_marginLeft="30dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/my_center1"
        android:background="@drawable/style_item_bottom"
        android:layout_marginStart="30dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/order">

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:textStyle="normal"
            android:text="过往订单 "
            android:layout_marginStart="5dp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/right"
            android:layout_marginLeft="150dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_center3"
        android:layout_marginLeft="30dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/my_center2"
        android:background="@drawable/style_item_bottom"
        android:layout_marginStart="30dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/like2">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:text="心愿清单 "
            android:textSize="20sp"
            android:textStyle="normal"
            android:layout_marginStart="5dp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/right"
            android:layout_marginLeft="150dp"
            android:layout_marginStart="150dp" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/my_center4"
        android:layout_marginLeft="30dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/my_center3"

        android:layout_marginStart="30dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:src="@mipmap/aaa111">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:text="我的旅拍"
            android:textSize="20sp"
            android:textStyle="normal" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/right"
            android:layout_marginLeft="155dp"
            android:layout_marginStart="155dp" />

    </LinearLayout>

    <View
        android:id="@+id/my_center5"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/my_center4"
        android:background="#CCCCCC"
        >


    </View>

    <LinearLayout
        android:id="@+id/my_center6"
        android:layout_marginLeft="30dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/my_center5"
        android:background="@drawable/style_item_bottom"
        android:layout_marginStart="30dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/language">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:text="语言设置 "
            android:textSize="20sp"
            android:textStyle="normal"
            android:layout_marginStart="5dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/right"
            android:layout_marginLeft="150dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/my_center7"
        android:layout_marginLeft="30dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/my_center6"
        android:background="@drawable/style_item_bottom"
        >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/history">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:text="浏览足迹 "
            android:textSize="20sp"
            android:textStyle="normal" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/right"
            android:layout_marginLeft="150dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_center8"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/my_center7"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/style_item_bottom">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/help">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:text="帮助中心"
            android:textSize="20sp"
            android:textStyle="normal" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/right"
            android:layout_marginLeft="155dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_center9"
        android:layout_marginLeft="30dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/my_center8"

        >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ourselves">

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:textStyle="normal"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:text="关于我们 "/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/right"
            android:layout_marginLeft="150dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_center9"
        android:background="@drawable/style_item_gray"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"

            >

            <TextView
                android:id="@+id/ours1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:maxLines="4"
                android:text="对我们的产品有意见或建议？ "
                android:textSize="24sp" />


            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_toRightOf="@+id/ours1"
                android:background="@mipmap/close" />




        </LinearLayout>

        <TextView
            android:id="@+id/ours2"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:maxLines="4"
            android:text="欢迎联系我司CTO"
            android:textSize="20sp" />


    </LinearLayout>

    <RadioGroup
        android:id="@+id/tabs_rg"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#dcdcdc"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/home_tab"
            style="@style/Custom.TabRadioButton"
            android:checked="true"
            android:drawableTop="@drawable/ic_home_black_24dp"
            android:text="首页" />

        <RadioButton
            android:id="@+id/record_tab"
            style="@style/Custom.TabRadioButton"
            android:drawableTop="@drawable/ic_home_black_24dp"
            android:text="旅拍" />

        <RadioButton
            android:id="@+id/order_tab"
            style="@style/Custom.TabRadioButton"
            android:drawableTop="@drawable/ic_home_black_24dp"
            android:text="订单" />

        <RadioButton
            android:id="@+id/myaccount_tab"
            style="@style/Custom.TabRadioButton"
            android:drawableTop="@drawable/ic_home_black_24dp"
            android:text="我的" />
    </RadioGroup>




</RelativeLayout>