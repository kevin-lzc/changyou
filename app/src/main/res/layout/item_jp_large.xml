<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:overScrollMode="never"
    android:layout_height="match_parent"
    android:transitionName="item_jp"
    android:id="@+id/drawer_scroll"
    >
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout2"
    tools:context=".Activity.MainActivity"
    android:transitionName="jp_item"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="100dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:id="@+id/jp_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:clickable="true"
            >

            <ImageView
                android:transitionName="jp"
                android:id="@+id/jp2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:src="@mipmap/design"

                />
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_below="@id/jp_img"
                android:layout_marginTop="10dp"
                android:id="@+id/location"
                >

                <ImageView
                    android:id="@+id/location1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/jp_img"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/location2" />


                <TextView
                    android:id="@+id/jp_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jp_img"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/location1"
                    android:text="三亚"
                    android:textSize="20sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/jp_text"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/location"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:text="省略。。。。。。。123344444"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_below="@id/jp_text"

                >


                <ImageView
                    android:id="@+id/jp_user"
                    android:layout_width="21dp"
                    android:layout_height="19dp"
                    android:layout_below="@id/jp_text"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/people"
                    />

                <TextView
                    android:id="@+id/jp_name"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jp_user"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/jp3"
                    android:text="张三"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
</ScrollView>